{{#section 'head'}}
{{/section}}

<section class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <h1 class="col-md-6">{{title}} products</h1>
            </div>
            {{#each products}}
            <section class="row product-results-container">
                <section class="product-container col-md-6">
                    <h3><a href="/product/1">Title</a></h3>
                    <img class="product-thumbnail" alt="thumbnail image" src="/" />
                    <p>Details</p>
                </section>
            </section>
            {{/each}}
        </div>
    </div>
</section>
